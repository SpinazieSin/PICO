pico-8 cartridge // http://www.pico-8.com
version 18
__lua__

function _init()
	p_x = 0
	p_y = 0
end

function _update()
	if btn(0) then
		p_x-=1
	end
	if btn(1) then
		p_x+=1
	end
	if btn(2) then
		p_y-=1
	end
	if btn(3) then
		p_y+=1
	end
end

function _draw()
	cls(1)
	spr(0, p_x, p_y)
end

