__lua__
-- main functions --
function _init()
 -- gametime
 gt = 0
 
 -- shaymin variables
 sprite = 1
 x = 20
 y = 63
 left = false
 jump = false
end

function _update()
 gt += 1
 
 -- move shaymin
 getmovement()

 -- falling
 if not(fget(mget((x+2)/8, (y+4)/8), 0)) then
  y += 1
 end 
end

function _draw()
 cls(12)
 map()

 spr(sprite, x, y, 1, 1, left) 
end

-->8
-- movement functions --
function getmovement()

 -- move left or right
 if btn(0) then
  left = true
 elseif btn(1) then
  left = false
 end

 -- get input for jump
 if btn(5) and not(jump) then
  jump = true
 end

 -- jump shaymin
 if jump and gt%5 == 0 then
  if btn(4) then
   gt += 1
  end
  sprite += 1
  
  if left then 
   x -= 1
  else
   x += 1
  end
  
  if sprite > 3 then
   sprite = 1
   jump = false
  end
 end

end

